<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Animation.AppCompat.Tooltip"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/firstText"
        android:layout_width="272dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topLabel" />

    <Button
        android:id="@+id/button"
        android:layout_width="68dp"
        android:layout_height="50dp"
        android:onClick="btnClick"
        android:text="Toast"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.315"
        app:layout_constraintStart_toEndOf="@+id/firstText"
        app:layout_constraintTop_toBottomOf="@+id/button4" />

    <TextView
        android:id="@+id/topLabel"
        android:layout_width="272dp"
        android:layout_height="55dp"
        android:background="@android:color/holo_orange_light"
        android:padding="15px"
        android:textColor="@android:color/primary_text_light"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="32dp"
        android:text="Username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstText" />

    <EditText
        android:id="@+id/username"
        android:layout_width="183dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="11sp"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/firstText" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="36dp"
        android:text="Password"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/password"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/password"
        android:layout_width="185dp"
        android:layout_height="36dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="96dp"
        android:ems="10"
        android:inputType="textPassword"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button2"
        android:layout_width="69dp"
        android:layout_height="42dp"
        android:layout_marginTop="16dp"
        android:onClick="signIn"
        android:text="@string/common_signin_button_text"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.631"
        app:layout_constraintStart_toEndOf="@+id/password"
        app:layout_constraintTop_toBottomOf="@+id/button3"
        app:layout_constraintVertical_bias="0.021" />

    <Button
        android:id="@+id/button3"
        android:layout_width="69dp"
        android:layout_height="42dp"
        android:layout_marginTop="8dp"
        android:onClick="signUp"
        android:text="Sign Up"
        android:textColor="#0000FF"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.64"
        app:layout_constraintStart_toEndOf="@+id/username"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <Button
        android:id="@+id/button4"
        android:layout_width="73dp"
        android:layout_height="56dp"
        android:onClick="signOut"
        android:text="Sign Out"
        android:textColor="#FF0000"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.375"
        app:layout_constraintStart_toEndOf="@+id/topLabel"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="144dp"
        android:layout_height="144dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.018"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password"
        app:layout_constraintVertical_bias="0.016">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/a11"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_column="1"
                android:layout_margin="2dp"
                android:textSize="15sp"
                android:textColor="#FFFF00"
                android:background="#0E64C2"
                android:onClick="plyTicTacToe"
                android:padding="11dp" />

            <TextView
                android:id="@+id/a12"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_column="2"
                android:layout_margin="2dp"
                android:textSize="15sp"
                android:textColor="#FFFF00"
                android:background="#0E64C2"
                android:onClick="plyTicTacToe"
                android:padding="11dp" />

            <TextView
                android:id="@+id/a13"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_column="3"
                android:layout_margin="2dp"
                android:textSize="15sp"
                android:textColor="#FFFF00"
                android:background="#0E64C2"
                android:onClick="plyTicTacToe"
                android:padding="11dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/a21"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_column="1"
                android:layout_margin="2dp"
                android:textSize="15sp"
                android:textColor="#FFFF00"
                android:background="#0E64C2"
                android:onClick="plyTicTacToe"
                android:padding="11dp" />

            <TextView
                android:id="@+id/a22"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_column="2"
                android:layout_margin="2dp"
                android:textSize="15sp"
                android:textColor="#FFFF00"
                android:background="#0E64C2"
                android:onClick="plyTicTacToe"
                android:padding="11dp" />

            <TextView
                android:id="@+id/a23"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_column="3"
                android:layout_margin="2dp"
                android:textSize="15sp"
                android:textColor="#FFFF00"
                android:background="#0E64C2"
                android:onClick="plyTicTacToe"
                android:padding="11dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/a31"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_column="1"
                android:layout_margin="2dp"
                android:textSize="15sp"
                android:textColor="#FFFF00"
                android:background="#0E64C2"
                android:onClick="plyTicTacToe"
                android:padding="11dp" />

            <TextView
                android:id="@+id/a32"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_column="2"
                android:layout_margin="2dp"
                android:textSize="15sp"
                android:textColor="#FFFF00"
                android:background="#0E64C2"
                android:onClick="plyTicTacToe"
                android:padding="11dp" />

            <TextView
                android:id="@+id/a33"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_column="3"
                android:layout_margin="2dp"
                android:textSize="15sp"
                android:textColor="#FFFF00"
                android:background="#0E64C2"
                android:onClick="plyTicTacToe"
                android:padding="11dp" />

        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Game"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.145"
        android:onClick="resetTicTacToe"
        app:layout_constraintStart_toEndOf="@+id/tableLayout"
        app:layout_constraintTop_toBottomOf="@+id/password"
        app:layout_constraintVertical_bias="0.039" />

</androidx.constraintlayout.widget.ConstraintLayout>